package com.codeprep.unary;

public class Increment_Decrement {
	public static void main(String[] args) {
		
//		Example 1.
		
//		int x = 5;		 //6     -->7
//		System.out.println(x++ + ++x);
//						 //5   +   7 --> 12
		
//		Example 2. 
		
		int i = 1;    //--> i=1
		int j = i++;  //--> j=1 & i=2
		
		System.out.println(i);  //2
		System.out.println(j);  //1
		
//		Example 3.
		
//		int l = 1;    // l=1
//		int k = ++l;  // k=2 & l=2
//		
//		System.out.println(l);  //2
//		System.out.println(k);  //2
		
//		Example 4.
		
//		int i = 5;			// i=5 --> 6 --> 7
//		int x = i++ + ++i;  
//		      //5   +   7 --> 12
//		System.out.println(x);	//12
//		System.out.println(i);  //7
		
//		Example 5.
		
//		int i = 5; //i=5 --> 6 --> 7
//		int x = ++i + ++i;
//		      //  6 +   7 --> 13
//		System.out.println(x);	//13
//		System.out.println(i);	//7
		
//		Example 6.
		
//		int a = 11, b = 22, c;  //a=11 -->12 -->13
//		                        //b=22 -->23 -->24 
//		c = a + b + a++ + b++ + ++a + ++b;
//		  //11+ 22+ 11  +22   +  13 +  24 -->103  
//		System.out.println("a= "+a);  //13
//		System.out.println("b= "+b);  //24
//		System.out.println("c= "+c);  //103
		
//		Example 7.
		
//		int i = 0;  //i=0 -->1 -->0 -->1 -->0
//		int k = i++ - --i + ++i - i--;
//			//  0   -   0 +   1 - 1 -->0
//		System.out.println(k);
//		System.out.println(i);
		
//		Example 8.
		
//		int i = 19, j = 29, k = 39; //i=19 --> 18 --> 
//									//j=29 --> 28 -->
//									//k=39 --> 38 -->
//		int m = i-- - j-- - k--;
//		//      19  - 29  - 39
//		System.out.println("i= "+i); //18
//		System.out.println("j= "+j); //28 
//		System.out.println("k= "+k); //38
//		
//		System.out.println(m);  //-->-49
		
//		Example 9. 
		
		
		
		
		
		
		
		
		
		
		
		
