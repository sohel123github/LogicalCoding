package com.codeprep;

import java.util.Optional;

public class Dummy {
	
	public static Optional<String> getName() {
		String name = null;
		return Optional.ofNullable(name);
	}
	
	public static void main(String[] args) {
		
		Optional<String> newStr = getName();
		
//		--> If value is present [NotNull] - 
//		System.out.println(newStr.isPresent());							//true
//		System.out.println(newStr.get());								//Sohel
//		System.out.println(newStr.orElse("This is empty object.."));	//Sohel
		
//		--> If value is not present [Null] - 
		System.out.println(newStr.isPresent());							//false
//		System.out.println(newStr.get());								//NoSuchElementException
		System.out.println(newStr.orElse("This is empty object.."));	//This is empty object..
		
		
	}
}
